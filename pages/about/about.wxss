@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.reason_txt{
  font-size: 32rpx;
  color: #aaaaaa;
  display: table;
  width: auto;
  white-space: nowrap;
  border-spacing: 0.5rem 0;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 28rpx;
}
.reason_txt::before,.reason_txt::after{
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#aaaaaa, #aaaaaa) repeat-x center;
  background-size: 0.1rem 0.1rem;
}
.card{
  font-size: 32rpx;
  font-family: SimSong;
  display: table;
  width: auto;
  margin-top: 50rpx;
  margin-right: 10%;
  margin-left: 10%;
  background-color: transparent;

}
.title{
  font-family: SimSong;
  color: #2c3e50;
  font-size: 40rpx;
  text-align: center;
  margin-top: 30rpx;
}