@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

.reason_txt {
    font-size: 32rpx;
    color: #aaaaaa;
    display: table;
    width: auto;
    white-space: nowrap;
    border-spacing: 0.5rem 0;
    margin-left: 28rpx;
    margin-right: 28rpx;
    margin-top: 28rpx;
}

.reason_txt::before, .reason_txt::after {
    display: table-cell;
    content: "";
    width: 50%;
    background: linear-gradient(#aaaaaa, #aaaaaa) repeat-x center;
    background-size: 0.1rem 0.1rem;
}
.content-card{
    font-size: 30rpx;
    font-family: SimSong;
    width: 18vw;
    line-height: 100%;
    padding: 10rpx;
    margin-right: 10px;
    margin-top: 25rpx;
}

.law-article-search{
    border: 1rpx;
}

.page-title{
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    text-align: center;
    font-size: 40rpx;
    color: #2c3e50;
    font-family: SimSong;
}
.slot_1_container {
