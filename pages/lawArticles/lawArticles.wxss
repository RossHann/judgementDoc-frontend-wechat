}

.modal-btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid rgba(7,17,27,0.1);
    width: 100%;
}

.cancel-btn, .confirm-btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    width: 50%;
}

.cancel-btn {
    border-right: 1rpx solid rgba(7,17,27,0.1);
}

