.editor{
    margin-right: 40rpx;
    margin-left: 43rpx;
    width: 89%;
    border: lightgrey solid 1px;
    text-align: left;
    padding: 10px 10px 10px 10px;
    height: 36vh;
    overflow: auto;
    white-space: pre-line;
    line-height: 24rpx;
    z-index: 1;
    font-family: SimSong;
    background-color: white;
}

#check-button{
    margin: 20rpx 40rpx 40rpx 40rpx;
    border: transparent;
    text-align: center;
    color: white;
    font-family: SimSong;
    font-size: 23rpx;
    background-color: #2c3e50;
}

.page-title{
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    text-align: center;
    font-size: 40rpx;
    color: #2c3e50;
    font-family: SimSong;
}

.result-list {
    display: inline-list-item;
    flex-wrap: wrap;
    padding: 0px 0rpx 0px;
    margin: 40rpx 40rpx 40rpx 40rpx;
    justify-content: space-between;
}

.result-li{
    border: transparent solid 3px;
    margin-top: 10rpx;
    border-radius: 5px;
}

.result-list-border{
    border: transparent solid 3px;
    border-radius: 5px;
}
.fact-box{
    background-color: #666666;
}
.law-box{
    background-color: darkorange;
}
.conclusion-box{
    background-color: dodgerblue;
}

.result-title {
    color: white;
    font-family: SimSong;
    font-size: 32rpx;
    font-weight: 300;
    padding: 2px 10px 2px 10px;
}
.result-content{
    font-family: SimSong;
    /*width: 40.5vh;*/
    padding: 10px 10px 10px 10px;
    background-color: white;
}

.result-warning{
    color: #7a0f09;
    background-color: white;
    font-family: SimSong;
}
.warning-title{
    padding-left: 10px;
}
.warning-content{
    padding-right: 30px;
    padding-left: 30px;
    padding-bottom: 10px;
}

.warning-unreasonably-quoted-law{
    padding-right: 30px;
    padding-left: 10px;
    padding-bottom: 10px;
}